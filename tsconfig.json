{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "react"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["react-env.d.ts", "**/*.ts", "**/*.tsx", ".react/types/**/*.ts", "src/styles/DetailedCard.css"],
  "exclude": ["node_modules"]
}
